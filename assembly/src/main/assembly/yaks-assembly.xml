
<?xml version="1.0" encoding="UTF-8"?>
<assembly
    xmlns="http://apache-maven.apache.org/plugins/apache-maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://apache-maven.apache.org/plugins/apache-maven-assembly-plugin/assembly/1.1.2 http://apache-maven.apache.org/xsd/assembly-1.1.2.xsd"
>
    <id>assembly-simple</id>

    <!-- specify the output formats -->
    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>

        <!-- include other files filtered (from src/main/resources-filtered) -->
        <fileSet>
            <directory>src/main/resources-filtered</directory>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
            <fileMode>0644</fileMode>
        </fileSet>

        <!-- include examples -->
        <fileSet>
            <directory>../examples</directory>
            <outputDirectory>/examples</outputDirectory>
            <includes>
                <include>src/**</include>
                <include>pom.xml</include>
                <include>README.md</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>

        <!--  include documentation -->
        <fileSet>
            <directory>../yaks/target/site</directory>
            <outputDirectory>/</outputDirectory>
            <fileMode>0644</fileMode>
            <excludes>
                <!-- exclude generated files we don't want -->
                <exclude>project-reports.html</exclude>
                <exclude>css/</exclude>
            </excludes>
        </fileSet>

    </fileSets>


    <files>
        <!-- include parent-pom file -->
        <file>
            <source>../parent-pom/pom.xml</source>
            <destName>parent-pom-${project.version}.pom</destName>
            <fileMode>0644</fileMode>
        </file>
    
        <!-- include yaks JAR-->
        <file>
            <source>../yaks/target/yaks-${project.version}.jar</source>
            <destName>yaks-${project.version}.jar</destName>
            <fileMode>0644</fileMode>
        </file>

        <!-- include yaks POM -->
        <file>
            <source>../yaks/pom.xml</source>
            <destName>yaks-${project.version}.pom</destName>
            <fileMode>0644</fileMode>
        </file>


    </files>

</assembly>
